<Window x:Class="iRacingReplayDirector.AIDirectorSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Auto Director Settings" Height="650" Width="540"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Auto Director Settings" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- Settings Content -->
        <TabControl Grid.Row="1">
            <!-- LLM Provider Tab -->
            <TabItem Header="Camera Plan">
                <StackPanel Margin="10">
                    <TextBlock Text="Camera Plan Generation" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBlock Text="Choose how camera switches are generated" FontSize="11" Foreground="Gray" Margin="0,0,0,10"/>

                    <CheckBox x:Name="UseAICheckBox" Content="Use AI/LLM for camera selection" IsChecked="True"
                              Margin="0,0,0,10" Checked="UseAICheckBox_Changed" Unchecked="UseAICheckBox_Changed"/>

                    <!-- Event-Driven Mode Settings (shown when AI is disabled) -->
                    <StackPanel x:Name="EventDrivenModePanel" Visibility="Collapsed" Margin="0,0,0,15">
                        <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Background="#FFF8F8F8">
                            <StackPanel>
                                <TextBlock Text="Event-Driven Mode Settings" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBlock Text="Camera switches are triggered by detected events (incidents, overtakes, battles). The camera will switch BEFORE each event to capture the action as it unfolds."
                                           TextWrapping="Wrap" Margin="0,0,0,15"/>

                                <TextBlock Text="Anticipation (seconds before event):" Margin="0,0,0,2"/>
                                <TextBlock Text="How early to switch camera before an event happens" FontSize="11" Foreground="Gray" Margin="0,0,0,5"/>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <Slider x:Name="AnticipationSlider" Minimum="1" Maximum="6" Value="3"
                                            Width="200" TickFrequency="1" IsSnapToTickEnabled="True"/>
                                    <TextBlock Text="{Binding Value, ElementName=AnticipationSlider, StringFormat={}{0:0}s}"
                                               VerticalAlignment="Center" Margin="10,0,0,0" Width="30"/>
                                </StackPanel>

                                <TextBlock Text="Minimum seconds between cuts:" Margin="0,0,0,2"/>
                                <TextBlock Text="Prevents rapid camera switching" FontSize="11" Foreground="Gray" Margin="0,0,0,5"/>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <Slider x:Name="MinSecondsBetweenCutsSlider" Minimum="2" Maximum="10" Value="4"
                                            Width="200" TickFrequency="1" IsSnapToTickEnabled="True"/>
                                    <TextBlock Text="{Binding Value, ElementName=MinSecondsBetweenCutsSlider, StringFormat={}{0:0}s}"
                                               VerticalAlignment="Center" Margin="10,0,0,0" Width="30"/>
                                </StackPanel>

                                <TextBlock Text="Maximum seconds between cuts:" Margin="0,0,0,2"/>
                                <TextBlock Text="Fills gaps when no events are happening" FontSize="11" Foreground="Gray" Margin="0,0,0,5"/>
                                <StackPanel Orientation="Horizontal">
                                    <Slider x:Name="MaxSecondsBetweenCutsSlider" Minimum="8" Maximum="30" Value="15"
                                            Width="200" TickFrequency="2" IsSnapToTickEnabled="True"/>
                                    <TextBlock Text="{Binding Value, ElementName=MaxSecondsBetweenCutsSlider, StringFormat={}{0:0}s}"
                                               VerticalAlignment="Center" Margin="10,0,0,0" Width="30"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- AI Provider Settings (shown when AI is enabled) -->
                    <StackPanel x:Name="AIProviderPanel">
                        <TextBlock Text="Select Provider:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox x:Name="ProviderComboBox" Width="200" HorizontalAlignment="Left"
                                  SelectionChanged="ProviderComboBox_SelectionChanged">
                            <ComboBoxItem Content="OpenAI" Tag="OpenAI"/>
                            <ComboBoxItem Content="Local Model" Tag="Local"/>
                        </ComboBox>

                        <!-- OpenAI Settings -->
                        <StackPanel x:Name="OpenAIPanel" Margin="0,15,0,0">
                            <TextBlock Text="OpenAI Settings" FontWeight="SemiBold" Margin="0,0,0,5"/>

                            <TextBlock Text="API Key:" Margin="0,5,0,2"/>
                            <PasswordBox x:Name="ApiKeyBox" Width="350" HorizontalAlignment="Left"/>

                            <TextBlock Text="Model:" Margin="0,10,0,2"/>
                            <ComboBox x:Name="OpenAIModelComboBox" Width="200" HorizontalAlignment="Left">
                                <ComboBoxItem Content="gpt-3.5-turbo" IsSelected="True"/>
                                <ComboBoxItem Content="gpt-4o-mini"/>
                                <ComboBoxItem Content="gpt-4o"/>
                                <ComboBoxItem Content="gpt-4-turbo"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Local Model Settings -->
                        <StackPanel x:Name="LocalModelPanel" Margin="0,15,0,0" Visibility="Collapsed">
                            <TextBlock Text="Local Model Settings" FontWeight="SemiBold" Margin="0,0,0,5"/>

                            <TextBlock Text="Endpoint URL:" Margin="0,5,0,2"/>
                            <TextBox x:Name="LocalEndpointBox" Width="350" HorizontalAlignment="Left"
                                     Text="http://localhost:11434/v1/chat/completions"/>

                            <TextBlock Text="Model Name:" Margin="0,10,0,2"/>
                            <TextBox x:Name="LocalModelNameBox" Width="200" HorizontalAlignment="Left"
                                     Text="llama3"/>
                        </StackPanel>

                        <Button Content="Test Connection" Width="120" HorizontalAlignment="Left" Margin="0,20,0,0"
                                Click="TestConnection_Click"/>
                        <TextBlock x:Name="ConnectionStatusText" Margin="0,5,0,0" Foreground="Gray"/>
                    </StackPanel>
                </StackPanel>
            </TabItem>

            <!-- Event Detection Tab -->
            <TabItem Header="Event Detection">
                <StackPanel Margin="10">
                    <TextBlock Text="Enable Event Detection:" FontWeight="SemiBold" Margin="0,0,0,10"/>

                    <CheckBox x:Name="DetectIncidentsCheckBox" Content="Detect Incidents (off-track, spins)"
                              IsChecked="True" Margin="0,5,0,0"/>
                    <CheckBox x:Name="DetectOvertakesCheckBox" Content="Detect Overtakes (position changes)"
                              IsChecked="True" Margin="0,5,0,0"/>
                    <CheckBox x:Name="DetectBattlesCheckBox" Content="Detect Battles (close racing)"
                              IsChecked="True" Margin="0,5,0,0"/>

                    <TextBlock Text="Scan Settings:" FontWeight="SemiBold" Margin="0,20,0,10"/>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Scan Interval (frames):" VerticalAlignment="Center"/>
                        <TextBox x:Name="ScanIntervalBox" Width="60" Margin="10,0,0,0" Text="60"/>
                    </StackPanel>
                    <TextBlock Text="Lower = more detail but slower scan" FontSize="11" Foreground="Gray" Margin="0,2,0,0"/>
                </StackPanel>
            </TabItem>

            <!-- Driver Selection Tab -->
            <TabItem Header="Driver Selection">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <TextBlock Text="Event Weights" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBlock Text="How much each event type influences driver selection" FontSize="11" Foreground="Gray" Margin="0,0,0,10"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Incidents:" VerticalAlignment="Center"/>
                            <Slider Grid.Row="0" Grid.Column="1" x:Name="IncidentWeightSlider" Minimum="0" Maximum="100" Value="70" TickFrequency="10" IsSnapToTickEnabled="True"/>
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding Value, ElementName=IncidentWeightSlider, StringFormat={}{0:0}}" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Overtakes:" VerticalAlignment="Center" Margin="0,5,0,0"/>
                            <Slider Grid.Row="1" Grid.Column="1" x:Name="OvertakeWeightSlider" Minimum="0" Maximum="100" Value="50" TickFrequency="10" IsSnapToTickEnabled="True" Margin="0,5,0,0"/>
                            <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding Value, ElementName=OvertakeWeightSlider, StringFormat={}{0:0}}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,5,0,0"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Battles:" VerticalAlignment="Center" Margin="0,5,0,0"/>
                            <Slider Grid.Row="2" Grid.Column="1" x:Name="BattleWeightSlider" Minimum="0" Maximum="100" Value="10" TickFrequency="10" IsSnapToTickEnabled="True" Margin="0,5,0,0"/>
                            <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding Value, ElementName=BattleWeightSlider, StringFormat={}{0:0}}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </Grid>

                        <TextBlock Text="Bonus Weights" FontWeight="SemiBold" Margin="0,20,0,5"/>
                        <TextBlock Text="Additional factors that boost driver selection" FontSize="11" Foreground="Gray" Margin="0,0,0,10"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Momentum:" VerticalAlignment="Center" ToolTip="Bonus for drivers gaining positions"/>
                            <Slider Grid.Row="0" Grid.Column="1" x:Name="MomentumWeightSlider" Minimum="0" Maximum="50" Value="20" TickFrequency="5" IsSnapToTickEnabled="True"/>
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding Value, ElementName=MomentumWeightSlider, StringFormat={}{0:0}}" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Pack Racing:" VerticalAlignment="Center" Margin="0,5,0,0" ToolTip="Bonus for drivers in groups"/>
                            <Slider Grid.Row="1" Grid.Column="1" x:Name="PackWeightSlider" Minimum="0" Maximum="50" Value="15" TickFrequency="5" IsSnapToTickEnabled="True" Margin="0,5,0,0"/>
                            <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding Value, ElementName=PackWeightSlider, StringFormat={}{0:0}}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,5,0,0"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Fresh Action:" VerticalAlignment="Center" Margin="0,5,0,0" ToolTip="Bonus for recent position changes"/>
                            <Slider Grid.Row="2" Grid.Column="1" x:Name="FreshActionWeightSlider" Minimum="0" Maximum="50" Value="25" TickFrequency="5" IsSnapToTickEnabled="True" Margin="0,5,0,0"/>
                            <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding Value, ElementName=FreshActionWeightSlider, StringFormat={}{0:0}}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,5,0,0"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Position:" VerticalAlignment="Center" Margin="0,5,0,0" ToolTip="Baseline interest from running position"/>
                            <Slider Grid.Row="3" Grid.Column="1" x:Name="PositionWeightSlider" Minimum="0" Maximum="30" Value="20" TickFrequency="5" IsSnapToTickEnabled="True" Margin="0,5,0,0"/>
                            <TextBlock Grid.Row="3" Grid.Column="2" Text="{Binding Value, ElementName=PositionWeightSlider, StringFormat={}{0:0}}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </Grid>

                        <TextBlock Text="Variety Control" FontWeight="SemiBold" Margin="0,20,0,5"/>
                        <TextBlock Text="How strongly to enforce driver switching" FontSize="11" Foreground="Gray" Margin="0,0,0,10"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Variety Strength:" VerticalAlignment="Center" ToolTip="Penalty for recently shown drivers"/>
                            <Slider Grid.Row="0" Grid.Column="1" x:Name="VarietyPenaltySlider" Minimum="20" Maximum="100" Value="70" TickFrequency="10" IsSnapToTickEnabled="True"/>
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding Value, ElementName=VarietyPenaltySlider, StringFormat={}{0:0}}" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Action Override:" VerticalAlignment="Center" Margin="0,5,0,0" ToolTip="How much action reduces variety penalty (0=never, 100=fully)"/>
                            <Slider Grid.Row="1" Grid.Column="1" x:Name="VarietyDampeningSlider" Minimum="0" Maximum="100" Value="30" TickFrequency="10" IsSnapToTickEnabled="True" Margin="0,5,0,0"/>
                            <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding Value, ElementName=VarietyDampeningSlider, StringFormat={}{0:0}%}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,5,0,0"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Min Cuts/Minute:" VerticalAlignment="Center" Margin="0,5,0,0" ToolTip="Minimum driver switches per minute"/>
                            <Slider Grid.Row="2" Grid.Column="1" x:Name="MinCutsSlider" Minimum="2" Maximum="10" Value="4" TickFrequency="1" IsSnapToTickEnabled="True" Margin="0,5,0,0"/>
                            <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding Value, ElementName=MinCutsSlider, StringFormat={}{0:0}}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </Grid>

                        <TextBlock Text="Focus Driver" FontWeight="SemiBold" Margin="0,20,0,5"/>
                        <TextBlock Text="Give extra weight to a specific driver's actions" FontSize="11" Foreground="Gray" Margin="0,0,0,10"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Car Number:" VerticalAlignment="Center" ToolTip="Enter car number to focus on (0 = none)"/>
                            <TextBox Grid.Row="0" Grid.Column="1" x:Name="FocusDriverBox" Width="60" HorizontalAlignment="Left" Text="0" ToolTip="Car number (0 = no focus driver)"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Focus Bonus:" VerticalAlignment="Center" Margin="0,5,0,0" ToolTip="Extra points added to focus driver's score"/>
                            <Slider Grid.Row="1" Grid.Column="1" x:Name="FocusDriverBonusSlider" Minimum="0" Maximum="100" Value="30" TickFrequency="10" IsSnapToTickEnabled="True" Margin="0,5,0,0"/>
                            <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding Value, ElementName=FocusDriverBonusSlider, StringFormat=+{0:0}}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </Grid>

                        <Button Content="Reset to Defaults" Width="120" HorizontalAlignment="Left" Margin="0,20,0,0" Click="ResetWeights_Click"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Camera Selection Tab -->
            <TabItem Header="Cameras">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <TextBlock Text="Camera Selection" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBlock Text="Choose which cameras the AI can use in the broadcast" FontSize="11" Foreground="Gray" Margin="0,0,0,15"/>

                        <TextBlock Text="Available Cameras:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBlock Text="Check the cameras you want to EXCLUDE from the broadcast" FontSize="11" Foreground="Gray" Margin="0,0,0,10"/>

                        <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="TV Cameras" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <CheckBox x:Name="ExcludeTV1" Content="TV1" Margin="15,2,0,0"/>
                                <CheckBox x:Name="ExcludeTV2" Content="TV2" Margin="15,2,0,0"/>
                                <CheckBox x:Name="ExcludeTV3" Content="TV3" Margin="15,2,0,0"/>

                                <TextBlock Text="Chase Cameras (excluded by default)" FontWeight="SemiBold" Margin="0,10,0,5"/>
                                <CheckBox x:Name="ExcludeChase" Content="Chase" IsChecked="True" Margin="15,2,0,0"/>
                                <CheckBox x:Name="ExcludeFarChase" Content="Far Chase" IsChecked="True" Margin="15,2,0,0"/>
                                <CheckBox x:Name="ExcludeRearChase" Content="Rear Chase" Margin="15,2,0,0"/>

                                <TextBlock Text="Onboard Cameras" FontWeight="SemiBold" Margin="0,10,0,5"/>
                                <CheckBox x:Name="ExcludeCockpit" Content="Cockpit" Margin="15,2,0,0"/>
                                <CheckBox x:Name="ExcludeRollBar" Content="Roll Bar" Margin="15,2,0,0"/>
                                <CheckBox x:Name="ExcludeGyro" Content="Gyro" Margin="15,2,0,0"/>
                                <CheckBox x:Name="ExcludeNose" Content="Nose" Margin="15,2,0,0"/>
                                <CheckBox x:Name="ExcludeGearbox" Content="Gearbox" Margin="15,2,0,0"/>

                                <TextBlock Text="Suspension Cameras" FontWeight="SemiBold" Margin="0,10,0,5"/>
                                <CheckBox x:Name="ExcludeLFSusp" Content="LF Susp" Margin="15,2,0,0"/>
                                <CheckBox x:Name="ExcludeRFSusp" Content="RF Susp" Margin="15,2,0,0"/>
                                <CheckBox x:Name="ExcludeLRSusp" Content="LR Susp" Margin="15,2,0,0"/>
                                <CheckBox x:Name="ExcludeRRSusp" Content="RR Susp" Margin="15,2,0,0"/>

                                <TextBlock Text="Aerial Cameras" FontWeight="SemiBold" Margin="0,10,0,5"/>
                                <CheckBox x:Name="ExcludeChopper" Content="Chopper" Margin="15,2,0,0"/>
                                <CheckBox x:Name="ExcludeBlimp" Content="Blimp" Margin="15,2,0,0"/>

                                <TextBlock Text="Other Cameras (excluded by default)" FontWeight="SemiBold" Margin="0,10,0,5"/>
                                <CheckBox x:Name="ExcludeScenic" Content="Scenic" IsChecked="True" Margin="15,2,0,0"/>
                                <CheckBox x:Name="ExcludePitLane" Content="Pit Lane" IsChecked="True" Margin="15,2,0,0"/>
                                <CheckBox x:Name="ExcludePitLane2" Content="Pit Lane 2" IsChecked="True" Margin="15,2,0,0"/>
                            </StackPanel>
                        </Border>

                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <Button Content="Select All" Width="80" Click="SelectAllCameras_Click" Margin="0,0,10,0"/>
                            <Button Content="Deselect All" Width="80" Click="DeselectAllCameras_Click" Margin="0,0,10,0"/>
                            <Button Content="Reset Defaults" Width="90" Click="ResetCameras_Click"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Overlay Settings Tab -->
            <TabItem Header="Overlays">
                <StackPanel Margin="10">
                    <TextBlock Text="Driver Overlays" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBlock Text="Show driver information during playback" FontSize="11" Foreground="Gray" Margin="0,0,0,15"/>

                    <CheckBox x:Name="ShowCurrentDriverOverlayCheckBox" Content="Show Current Driver"
                              IsChecked="True" Margin="0,5,0,0"/>
                    <TextBlock Text="Shows the driver currently being followed" FontSize="11" Foreground="Gray" Margin="20,2,0,10"/>

                    <CheckBox x:Name="ShowAheadDriverOverlayCheckBox" Content="Show Driver Ahead"
                              IsChecked="False" Margin="0,5,0,0"/>
                    <TextBlock Text="Shows the driver in front of the current driver" FontSize="11" Foreground="Gray" Margin="20,2,0,10"/>

                    <CheckBox x:Name="ShowBehindDriverOverlayCheckBox" Content="Show Driver Behind"
                              IsChecked="False" Margin="0,5,0,0"/>
                    <TextBlock Text="Shows the driver behind the current driver" FontSize="11" Foreground="Gray" Margin="20,2,0,10"/>

                    <CheckBox x:Name="ShowLeaderboardOverlayCheckBox" Content="Show Leaderboard"
                              IsChecked="False" Margin="0,5,0,0"/>
                    <TextBlock Text="F1-style leaderboard showing positions, driver codes, and gaps" FontSize="11" Foreground="Gray" Margin="20,2,0,15"/>

                    <TextBlock Text="Overlay Position" FontWeight="SemiBold" Margin="0,10,0,5"/>

                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Position:" VerticalAlignment="Center" Width="100"/>
                        <ComboBox x:Name="OverlayPositionComboBox" Width="120">
                            <ComboBoxItem Content="Top" Tag="Top"/>
                            <ComboBoxItem Content="Bottom" Tag="Bottom" IsSelected="True"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <TextBlock Text="Offset from edge:" VerticalAlignment="Center" Width="100"/>
                        <Slider x:Name="OverlayOffsetSlider" Minimum="20" Maximum="300" Value="100"
                                Width="150" TickFrequency="20" IsSnapToTickEnabled="True"/>
                        <TextBlock Text="{Binding Value, ElementName=OverlayOffsetSlider, StringFormat={}{0:0}px}"
                                   VerticalAlignment="Center" Margin="10,0,0,0" Width="50"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <TextBlock Text="Font size:" VerticalAlignment="Center" Width="100"/>
                        <Slider x:Name="OverlayFontSizeSlider" Minimum="16" Maximum="48" Value="32"
                                Width="150" TickFrequency="4" IsSnapToTickEnabled="True"/>
                        <TextBlock Text="{Binding Value, ElementName=OverlayFontSizeSlider, StringFormat={}{0:0}pt}"
                                   VerticalAlignment="Center" Margin="10,0,0,0" Width="50"/>
                    </StackPanel>

                    <Button Content="Reset Defaults" Width="100" HorizontalAlignment="Left" Margin="0,20,0,0"
                            Click="ResetOverlays_Click"/>
                </StackPanel>
            </TabItem>
        </TabControl>

        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Save" Width="80" Click="Save_Click" IsDefault="True"/>
            <Button Content="Cancel" Width="80" Margin="10,0,0,0" Click="Cancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
